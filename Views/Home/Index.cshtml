            user-select: none;
        }

        .city {
            align-items: center;
            justify-content: center;
            display:flex;
            flex-direction: column;
            padding: 40px 8%;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.8);
        }

        .city-name {
            font-size: 2em;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

    </style>
