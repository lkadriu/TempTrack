<body>
    <nav>
        <input type="checkbox" id="checkbox">
        <label for="checkbox" class="checkbtn">
            <i class="fas fa-bars"></i>
        </label>
        <label class="logo">Weather App</label>
        <ul>
            <li><a href="http://127.0.0.1:5500/index.html">Home</a></li> 
