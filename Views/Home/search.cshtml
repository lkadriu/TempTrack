            <li><a href="http://127.0.0.1:5500/contact.html">Contact</a></li>
            <li><a href="#">Feedback</a></li>
        </ul>
    </nav>

    <div class="container">
        <div class="header">
            <h1 class="title">Weather App</h1>
            <input type="text" id="cityInput" placeholder="Enter city name">
            <button onclick="getWeather()" class="search-button">Search</button>
        </div>
        <div id="weatherInfo" class="weather-container">
            <!-- Weather information will be displayed here -->
        </div>
    </div>

    <div class="additional-content" id="additionalContent">
        <div class="content">
            <!-- Additional content for About section -->
